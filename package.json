{
  "name": "local-ebook-viwer",
  "version": "1.0.0",
  "description": "ebook viewer web application for your local network.",
  "main": "index.js",
  "scripts": {
    "dev:frontend": "source ./.env && export NODE_ENV='development' && webpack-dev-server --inline --hot",
    "dev:backend": "source ./.env && $(npm bin)/nodemon --config nodemon.json",
    "build": "export NODE_ENV='production' && npm run clean && $(npm bin)/npm-run-all -p build:*",
    "build:frontend": "$(npm bin)/webpack",
    "build:backend": "$(npm bin)/tsc --project ./src/backend",
    "start": "node ./dist/backend/app.js",
    "start_withenv": "source ./.env && node ./dist/backend/app.js",
    "clean": "rimraf ./dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "takuro.f.1987@gmail.com",
